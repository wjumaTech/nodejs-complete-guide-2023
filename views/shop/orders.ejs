<%- include('../includes/head') %>

    <%- include('../includes/navigate') %>

    <main>

      
      <section class="container my-5">
    
        <header>
          <h3>My orders</h3>
        </header>

        <article class="row mt-3">
          
          <% if(orders.length > 0) { %>
            <% for( order of orders ) { %>
              <div class="col-12 mb-2">
                <div class="card">
                  <div class="card-body">
                    <h5 class="card-title">Order: <%= order._id %></h5>
                    <ol class="list-group">

                      <% for( item of order.products ) { %>
                        <li class="list-group-item"><%= item.product.title %> (<%= item.quantity %>)</li>
                      <% } %>
                    </ol>
                  </div>
                </div>
              </div>
            <% } %>
          <% } %>

        </article>

      </section>

     
    </main>
  </body>

<%- include('../includes/footer') %>