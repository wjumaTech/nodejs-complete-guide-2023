<%- include('../includes/head') %>
  <%- include('../includes/navigate') %>
    <main>
      <section class="container my-5">
        <header>
          <h3>My orders</h3>
        </header>
        <article class="row mt-3">
          <% if(orders.length > 0) { %>
            <% for( order of orders ) { %>
              <div class="col-12 mb-2">
                <div class="card">
                  <div class="card-body">
                    <div class="order__card-body--header">
                      <h5 class="card-title">Order: <%= order._id %></h5>
                      <ul class="list-group">
                        <li class="list-group-item"><a href="/orders/<%= order._id %>">Invoice</a></li>
                      </ul>
                    </div>
                    <ol class="list-group">
                      <% for( item of order.products ) { %>
                        <li class="list-group-item">
                          <%= item.product.title %> (<%= item.quantity %>)
                        </li> 
                      <% } %>
                    </ol>
                  </div>
                </div>
              </div>
            <% } %>
          <% } else { %>
            <h3>There are not orders realized</h3>
          <% } %>
        </article>
      </section>
    </main>
  </body>
<%- include('../includes/footer') %>